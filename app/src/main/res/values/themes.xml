<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MensajeriaTapatia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondaryBackground</item>
        <item name="colorPrimaryVariant">@color/secondaryBackground</item>
        <item name="colorOnPrimary">@color/titles</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/thirdBackground</item>
        <item name="colorSecondaryVariant">@color/thirdBackground</item>
        <item name="colorOnSecondary">@color/subtitles</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondaryBackground</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MensajeriaTapatia.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MensajeriaTapatia.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MensajeriaTapatia.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>