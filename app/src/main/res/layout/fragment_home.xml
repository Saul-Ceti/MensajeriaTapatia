<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/txtSaludo"
        android:layout_width="327dp"
        android:layout_height="33dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="28dp"
        android:text="@string/saludo"
        android:textAlignment="center"
        android:textColor="@color/titles"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSobreNosotros"
        android:layout_width="151dp"
        android:layout_height="30dp"
        android:layout_marginBottom="23dp"
        android:text="@string/nosotros"
        android:textAlignment="center"
        android:textColor="@color/subtitles"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="139dp"
        android:layout_height="169dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/txtSobreNosotros"
        app:layout_constraintStart_toStartOf="@+id/txtSobreNosotros"
        app:layout_constraintTop_toBottomOf="@+id/txtSaludo"
        tools:src="@drawable/ic_usuario" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="236dp"
        android:text="@string/mensaje"
        android:textAlignment="center"
        android:textColor="@color/plainText"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSobreNosotros" />

</androidx.constraintlayout.widget.ConstraintLayout>